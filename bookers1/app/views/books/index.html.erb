 <% if flash[:notice] %>
      <p class="flash">
        <%= flash[:notice] %>
      </p>
    <% end %>
<body>
<h1>Books</h1>
<table>
  <thead>
      <tr>
         <th>Title</th>
         <th>Body</th>
      </tr>
  </thead>
  <% @books.each do |book| %>
 <tbody>
   <div class="b">
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to 'Show', book_path(book.id) %></td>
     <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
    <td><%= link_to 'destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are Yuo Sure?" %></td>
  </div>
 </tbody>
</table>
<% end %>
<h2>New Book</h2>
<%= form_with model:@book,url:'/books', local:true do |f| %>
<% if @book.errors.any? %>
 <div id="error_expanation">
   <h2>2 errors prohibited this book from being saved: <% @book.errors.count %> </h2>
   <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
   </ul>
 </div>
<% end %>
<div class="field">
<h4>Title</h4>
<%= f.text_field :title %>
</div>
<div class="field">
<h4>Body</h4>
<%= f.text_area :body %>
</div>
<div class="actions">
<%= f.submit 'Create Book' %>
</div>
<% end %>