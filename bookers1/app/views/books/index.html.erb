<h2>Books</h2>
<% @books.each do |book| %>
<h4>Title
  <div class="book-title">
    <%= book.title %>
   </div>
</h4>
<span class="body">Body
  <div ckass="book-body">
      <%= book.body %>
  </div>
</span>
<% end %>
<h3>New Book</h3>
<%= form_with model:@book,url:'/books', local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>