<h2>Editing Book</h2>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<div class="edit-field">
<label class="book-title">Title</label>
<%= f.text_field :title %>
</div>
<div class="edit-area">
<label class="book-body">Body</label>
<%= f.text_area :body %>
</div>
<div class="edit-submit">
<%= f.submit 'Update Book' %>
</div>
<div class="edit-action">
<%= link_to 'show', book_path(@book.id) %> | <%= link_to 'Back', books_path %>
</div>
<% end %>